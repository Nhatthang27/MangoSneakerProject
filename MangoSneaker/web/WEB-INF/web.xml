<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>hostname</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>instance</param-name>
        <param-value>NHATTHANG</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>1433</param-value>
    </context-param>
    <context-param>
        <param-name>dbName</param-name>
        <param-value>MangoSneakerDB</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>pwd</param-name>
        <param-value>sa123456</param-value>
    </context-param>
    <servlet>
        <servlet-name>GetAllProductsController</servlet-name>
        <servlet-class>mangosneaker.controller.GetAllProductsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DispatcherProductController</servlet-name>
        <servlet-class>mangosneaker.controller.DispatcherProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SortProductController</servlet-name>
        <servlet-class>mangosneaker.controller.SortProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetSingleProductController</servlet-name>
        <servlet-class>mangosneaker.controller.GetSingleProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>mangosneaker.controller.AddToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllProductsController</servlet-name>
        <url-pattern>/GetAllProductsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DispatcherProductController</servlet-name>
        <url-pattern>/DispatcherProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SortProductController</servlet-name>
        <url-pattern>/SortProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSingleProductController</servlet-name>
        <url-pattern>/GetSingleProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddToCartController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>HomePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
